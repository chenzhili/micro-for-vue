{
  // 那个子项目用到了 eslint 都需要手动添加进来，否则 vscode eslint 提示会失效（通配符不可用）
  "eslint.workingDirectories": ["packages/edu", "packages/main"],
  "eslint.packageManager": "yarn",
  "prettier.semi": false,
  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "singleQuote": true,
      "semi": false
    }
  }
}
